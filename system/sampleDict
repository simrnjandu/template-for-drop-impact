    lineVert_x0.5
    {
        type        lineFace;
        axis        y;

        start       ( 0.5 -0.1 0.);
        end         ( 0.5 1.1 0. );         
    }

    lineHorz_y0.75
    {
        type        lineFace;
        axis        x;

        start       ( -0.1 0.75 0.);
        end         ( 1.1 0.75 0. );         
    }
     
 
);

